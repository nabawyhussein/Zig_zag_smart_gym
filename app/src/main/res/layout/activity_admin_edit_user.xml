<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/z"
    tools:context="com.example.zig_zag.admin_edit_user">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Edit User"
                android:textColor="@android:color/black"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:layout_height="30sp"

                android:textColorHint="@android:color/black"
                android:hint="Id"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"

                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="phone"

                android:inputType="phone"/>

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/edit_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="payed"
                android:inputType="number" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/edit_remain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="remain"
                android:inputType="number" />


            <LinearLayout

                android:textColorHint="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:textColorHint="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start" />

                <EditText
                    android:id="@+id/edit_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:textColorHint="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End" />

                <EditText
                    android:id="@+id/edit_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <Button
                android:id="@+id/edituser_button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:elevation="20sp"
                android:layout_marginHorizontal="60sp"
                android:background="@drawable/radius"
                android:text="Save"
                android:textSize="30sp" />

            <Button
                android:id="@+id/rwmove_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20sp"
                android:textColor="@android:color/white"
                android:elevation="20sp"
                android:layout_marginHorizontal="60sp"
                android:background="@drawable/radius"

                android:textSize="30sp"

                android:text="Delete" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
