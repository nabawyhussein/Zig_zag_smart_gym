<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/z"
    android:orientation="vertical"

    tools:context=".new_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="New User"
                android:textColor="@android:color/black"
                android:textSize="50sp"
                android:textStyle="bold" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Id"/>

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/adduser_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/adduser_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="phone"
                android:inputType="phone" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/adduser_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="payed"
                android:inputType="number" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/adduser_remain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="remain"
                android:inputType="number" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:textColorHint="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start" />

                <EditText

                    android:id="@+id/newuser_time_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:textColorHint="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End" />

                <EditText
                    android:id="@+id/newuser_date_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>



            <Button
                android:id="@+id/adduser_button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@android:color/white"
                android:elevation="20sp"
                android:layout_marginHorizontal="60sp"
                android:background="@drawable/radius"
                android:text="Save"
                android:textSize="30sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>