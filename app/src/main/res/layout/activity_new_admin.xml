<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/z"
    android:orientation="vertical"
    tools:context=".new_admin"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="New Admin"
                android:textColor="@android:color/black"
                android:textSize="50sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addadmin_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ID"
                android:inputType="textPersonName" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/addadmin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName" />

            <EditText

                android:textColorHint="@android:color/black"
                android:id="@+id/addadmin_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/addadmin_button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="save_newadmin"
                android:textColor="@android:color/white"
                android:elevation="20sp"
                android:layout_marginHorizontal="60sp"
                android:background="@drawable/radius"
                android:text="Save" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>