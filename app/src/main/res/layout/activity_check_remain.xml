<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/z"
    android:orientation="vertical"
    tools:context=".check_remain"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/youssef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="check users in range"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:textColor="@android:color/black"
                android:id="@+id/check_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="From"
                android:inputType="date" />

            <EditText
                android:textColor="@android:color/black"
                android:id="@+id/check_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="to"
                android:inputType="date" />

            <Button
                android:id="@+id/check_remain_in_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bcheck"
                android:textColor="@android:color/white"
                android:elevation="20sp"
                android:layout_marginHorizontal="60sp"
                android:background="@drawable/radius"
                android:onClick="get_range_user"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>